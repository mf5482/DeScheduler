<?xml version="1.0" encoding="utf-8"?>


<FrameLayout
    android:id="@+id/course_database_frame_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<android.support.v7.widget.RecyclerView
    xmlns:android = "http://schemas.android.com/apk/res/android"
    android:id="@+id/database_course_recycler_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

</android.support.v7.widget.RecyclerView>
    <LinearLayout
        android:id="@+id/no_database_courses_list"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/no_database_courses_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="16dp"
            android:text="@string/no_database_courses_prompt"/>

    </LinearLayout>
</FrameLayout>
